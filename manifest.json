{
    "manifest_version": 3,
    "name": "InnerPeace",
    "version": "1.0",
    "description": "Toggle visibility of distracting elements on various websites to maintain your InnerPeace.",
    "permissions": ["storage", "scripting", "activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.linkedin.com/*"],
            "js": [
                "scripts/linkedin/feed.js",
                "scripts/linkedin/aside.js",
                "scripts/linkedin/index.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": ["*://www.youtube.com/*"],
            "js": [
                "scripts/youtube/homefeed.js",
                "scripts/youtube/videopage.js",
                "scripts/youtube/index.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
