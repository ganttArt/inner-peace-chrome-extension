{
    "manifest_version": 3,
    "name": "InnerPeace",
    "version": "1.0",
    "description": "Toggle visibility of distracting elements on various websites to maintain your InnerPeace.",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "src/icons/icon16.png",
            "48": "src/icons/icon48.png",
            "128": "src/icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.linkedin.com/*"
            ],
            "js": [
                "scripts/linkedin/feed.js",
                "scripts/linkedin/aside.js",
                "scripts/linkedin/index.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "scripts/youtube/homefeed.js",
                "scripts/youtube/videopage.js",
                "scripts/youtube/index.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "src/icons/icon16.png",
        "48": "src/icons/icon48.png",
        "128": "src/icons/icon128.png"
    }
}