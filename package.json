{
    "name": "inner-peace-chrome-extension",
    "version": "1.0.0",
    "description": "A Chrome extension that helps you maintain focus by toggling visibility of distracting elements on various websites",
    "main": "background.js",
    "scripts": {
        "build": "echo 'No build step required for Chrome extension'",
        "build:firefox": "node scripts/build-firefox.js",
        "package:firefox": "npm run build:firefox && (cd dist-firefox && zip -r ../innerpeace-firefox.xpi *)",
        "dev": "npm run watch",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix"
    },
    "keywords": [
        "chrome-extension",
        "productivity",
        "focus",
        "distraction-free"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "chokidar": "^3.5.3",
        "eslint": "^8.55.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-n": "^16.3.0",
        "eslint-plugin-promise": "^6.1.1"
    }
}
