{
    "manifest_version": 2,
    "name": "InnerPeace",
    "version": "1.0",
    "description": "Toggle visibility of distracting elements on various websites to maintain your InnerPeace.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "*://*.linkedin.com/*",
        "*://www.youtube.com/*"
    ],
    "browser_action": {
        "default_popup": "src/popup.html",
        "default_icon": {
            "32": "src/icons/icon32.png",
            "64": "src/icons/icon64.png"
        }
    },
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/*"
            ],
            "js": [
                "scripts/utils.js",
                "scripts/linkedin/feed.js",
                "scripts/linkedin/aside.js",
                "scripts/linkedin/index.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "scripts/utils.js",
                "scripts/youtube/homefeed.js",
                "scripts/youtube/videopage.js",
                "scripts/youtube/index.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "32": "src/icons/icon32.png",
        "64": "src/icons/icon64.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "innerpeace@example.com",
            "strict_min_version": "109.0"
        }
    }
}